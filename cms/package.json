{
  "name": "@konto/cms",
  "version": "1.1.3",
  "description": "PayloadCMS backend for Konto donation platform",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:lint": "pnpm run format && pnpm run lint:fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next && rm -rf dist && rm -rf node_modules/.cache",
    "pre-commit": "lint-staged",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_ENV=test NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@konto/shared-types": "workspace:*",
    "@konto/shared-utils": "workspace:*",
    "@payloadcms/db-mongodb": "3.50.0",
    "@payloadcms/next": "3.50.0",
    "@payloadcms/payload-cloud": "3.50.0",
    "@payloadcms/richtext-lexical": "3.50.0",
    "@payloadcms/ui": "3.50.0",
    "@tailwindcss/postcss": "4.1.11",
    "clsx": "2.1.1",
    "cross-env": "10.0.0",
    "dotenv": "17.2.1",
    "graphql": "16.11.0",
    "next": "15.4.5",
    "payload": "3.50.0",
    "postcss": "8.5.6",
    "react": "19.1.1",
    "sharp": "0.34.3",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@playwright/test": "1.54.2",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.2.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "4.7.0",
    "eslint": "9.32.0",
    "eslint-config-next": "15.4.5",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.4",
    "playwright": "1.54.2",
    "playwright-core": "1.54.2",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "18.20.2 || >=20.9.0",
    "pnpm": "9 || 10"
  }
}
