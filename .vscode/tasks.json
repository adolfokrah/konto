{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Flutter",
      "type": "shell",
      "command": "make",
      "args": ["run"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}/mobile_app"
      },
      "problemMatcher": []
    },
    {
      "label": "Run iOS",
      "type": "shell",
      "command": "make",
      "args": ["run-ios"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}/mobile_app"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Android",
      "type": "shell",
      "command": "make",
      "args": ["run-android"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}/mobile_app"
      },
      "problemMatcher": []
    }
  ]
}
